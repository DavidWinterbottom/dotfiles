#!/bin/bash

if [[ `uname` == "MINGW32_NT-6.2" ]]; then
  echo "setting environment for GitBash"

  # local bin
  export PATH="/c/Users/David/bin/:$PATH"

  # Java Config
  export JAVA_HOME="/C/dev/languages/Java/jdk1.7.0_45"
  export JAVA_OPTS="-Xmx256m"
  export PATH="$JAVA_HOME/bin:$PATH"

  # ctags
  export PATH="/C/dev/tools/ctags/ctags58/:$PATH"
  
  # node
  export NODE_HOME="/C/dev/languages/nodejs"
  export NPM_PATH="/C/dev/tools/npm/"
  export PATH="$NODE_HOME:$NPM_PATH:$PATH"
  export TMPDIR="/C/dev/TMP" 

  # git
  export PATH="/C/dev/tools/Git/bin:$PATH"

  # subversion
  export PATH="/C/dev/tools/Subversion/bin:$PATH"

  # mvn
  export MVN_HOME="/C/dev/tools/apache-maven/3.1.1"
  export MVN_OPTS=" "
  export PATH="$MVN_HOME/bin:$PATH"

  # python
  export PYTHONHOME="/C/dev/languages/Python33"
  export PATH="$PYTHONHOME:$PATH"

  # ruby
  export RUBY_HOME="/C/dev/languages/Ruby193"
  export PATH="$RUBY_HOME/bin:$PATH"

else
  echo "unknown environment - please setup env"
fi

echo "setting env complete"
