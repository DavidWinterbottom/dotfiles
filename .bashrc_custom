#!/bin/bash

if [[ `uname` == "MINGW32_NT-6.2" || `uname` == "MINGW32_NT-6.1" ]];  then
  echo "setting environment for GitBash"
  # "MINGW32_NT-6.2" - windows 8
  # "MINGW32_NT-6.1" - windows 7

  export PREFIX="/C/Dev"
  alias cdd="cd $PREFIX"
  alias cds="cd $PREFIX/source"

  # local bin
  export PATH="/c/Users/David/bin/:$PATH"

  # Java Config
  #export JAVA_HOME="$PREFIX/languages/Java/jdk1.7.0_45"
  export JAVA_HOME="$PREFIX/languages/Java/jdk1.7.0_10"
  export JAVA_OPTS="-Xmx256m"
  export PATH="$JAVA_HOME/bin:$PATH"

  # ctags
  export PATH="$PREFIX/tools/ctags/ctags58/:$PATH"
  
  # node
  export NODE_HOME="$PREFIX/languages/nodejs"
  export NPM_PATH="$PREFIX/tools/npm/"
  export PATH="$NODE_HOME:$NPM_PATH:$PATH"
  export TMPDIR="$PREFIX/TMP" 

  # git
  export PATH="$PREFIX/tools/Git/bin:$PATH"

  # subversion
  export PATH="$PREFIX/tools/Subversion/bin:$PATH"

  # mvn
  export MVN_HOME="$PREFIX/tools/apache-maven/3.0.4"
  #export MVN_HOME="$PREFIX/tools/apache-maven/3.1.1"
  export MVN_OPTS=" "
  export PATH="$MVN_HOME/bin:$PATH"

  # python
  export PYTHONHOME="$PREFIX/languages/Python33"
  export PATH="$PYTHONHOME:$PATH"

  # ruby
  export RUBY_HOME="$PREFIX/languages/Ruby193"
  export PATH="$RUBY_HOME/bin:$PATH"
  
  # play
  export PLAY_HOME="$PREFIX/tools/play-2.1.0"
  export PATH="$PLAY_HOME:$PATH"

  #scala
  export SCALA_HOME="$PREFIX/tools/scala-2.10.0"
  export PATH="$SCALA_HOME:$PATH"

  # heroku
  export HEROKU_HOME="$PREFIX/tools/Heroku"
  export PATH="$HEROKU_HOME/bin:$PATH"

elif [[ `uname` == "Linux" ]] ; then
  echo "setting environment for Linux"

  # Heroku
  export PATH=/usr/local/heroku/bin:$PATH # Heroku: https://toolbelt.heroku.com/standalone

  export JAVA_HOME=/local/pkgs/jdk1.7.0_45/; 
  export MAVEN_HOME=/local/pkgs/apache-maven-3.0.4; 

  ## Add SBT to path
  export SBT_HOME=/local/pkgs/sbt

  export PATH="$SBT_HOME/bin:$HOME/bin:$JAVA_HOME/bin:$MAVEN_HOME/bin:$PATH"

else
  echo "unknown environment - please setup env"
fi

echo "setting env complete"
