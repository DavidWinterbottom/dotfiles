  export PATH="/c/Users/David/bin/:$PATH"

  # git
  export PATH="$PREFIX/tools/Git/bin:$PATH"

  # Java Config
  export JAVA_HOME="$PREFIX/languages/Java/jdk1.8.0_11"
  export PATH="$JAVA_HOME/bin:$PATH"

  # ctags
  
  # node
