elif [[ `uname` == "Linux" ]] ; then
  echo "setting environment for Linux"

  # local bin
  export PATH="/home/winterdc/bin/:$PATH"

  # Java Config
  export JAVA_HOME="/usr/lib/jvm/java-8-oracle/jre/bin"
  export JAVA_OPTS="-Xmx512m"
  export PATH="$JAVA_HOME/bin:$PATH"

